generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" 
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  username  String
  password  String    // ← new field
  todos     Todo[]
  sessions  Session[]
}


model Todo {
  id          String   @id @default(cuid())
  title       String
  isCompleted Boolean  @default(false)
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime @default(now()) // ⬅️ Add this line
}


model Session {
  id       String   @id // Used as the session token
  user     User     @relation(fields: [userId], references: [id])
  userId   String
  expires  DateTime
}
